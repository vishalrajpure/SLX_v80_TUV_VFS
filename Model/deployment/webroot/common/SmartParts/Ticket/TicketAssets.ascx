protected void grdAssets_InsertAssociationAction(object sender, EventArgs e) {

	    string text = Request.Form.Get(TicketAssetsgrdAssets_DataCarrier.UniqueID);
    if (text.Length > 0)
    {
    var feed = new Sage.Integration.Entity.Feeds.TicketAccountProductFeed();

		using (var stream = new System.IO.MemoryStream(Encoding.UTF8.GetBytes(text)))
		{
			new Sage.Common.Syndication.JsonSerializer().LoadFromStream<Sage.Integration.Entity.Feeds.TicketAccountProductEntry>(feed, stream);
		}

		if (feed == null) return;
		var transformer =
			Sage.Platform.Application.ApplicationContext.Current.Services.Get
				<Sage.Platform.SData.IAtomEntryToEntityTransformationService>();
    	
		var entity = BindingSource.Current as Sage.Entity.Interfaces.ITicket;

		if (transformer != null && entity != null && entity.AccountProducts.Count == 0)
		{
			foreach (Sage.Integration.Entity.Feeds.TicketAccountProductEntry entry in feed.Entries)
			{
				var item = transformer.ConvertEntry(entry) as Sage.Entity.Interfaces.ITicketAccountProduct;
				if (item != null)
				{
					item.Ticket = entity;
					entity.AccountProducts.Add(item);
				}
			}
			entity.Persisted -= grdAssets_InsertAssociationAction;
			entity.Save();
		}
	}



}

