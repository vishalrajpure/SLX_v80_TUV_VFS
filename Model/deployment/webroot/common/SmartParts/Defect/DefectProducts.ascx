          foreach (Sage.Entity.Interfaces.IDefectProduct item in entity.DefectProducts) 
          { 
              var transItem = transformer.ConvertEntity(item, include) as Sage.Integration.Entity.Feeds.DefectProductEntry; 
              if (transItem != null) 
