protected void QFSDataGrid_InsertAssociationAction(object sender, EventArgs e) {

	    string text = Request.Form.Get(DefectProductsQFSDataGrid_DataCarrier.UniqueID);
    if (text.Length > 0)
    {
    var feed = new Sage.Integration.Entity.Feeds.DefectProductFeed();

		using (var stream = new System.IO.MemoryStream(Encoding.UTF8.GetBytes(text)))
		{
			new Sage.Common.Syndication.JsonSerializer().LoadFromStream<Sage.Integration.Entity.Feeds.DefectProductEntry>(feed, stream);
		}

		if (feed == null) return;
		var transformer =
			Sage.Platform.Application.ApplicationContext.Current.Services.Get
				<Sage.Platform.SData.IAtomEntryToEntityTransformationService>();
    	
		var entity = BindingSource.Current as Sage.Entity.Interfaces.IDefect;

		if (transformer != null && entity != null && entity.DefectProducts.Count == 0)
		{
			foreach (Sage.Integration.Entity.Feeds.DefectProductEntry entry in feed.Entries)
			{
				var item = transformer.ConvertEntry(entry) as Sage.Entity.Interfaces.IDefectProduct;
				if (item != null)
				{
					item.Defect = entity;
					entity.DefectProducts.Add(item);
				}
			}
			entity.Persisted -= QFSDataGrid_InsertAssociationAction;
			entity.Save();
		}
	}



}

